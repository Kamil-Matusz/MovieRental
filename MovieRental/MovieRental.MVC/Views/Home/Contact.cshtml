@model MovieRental.MVC.Models.Contact.ContactForm
@{
    ViewData["Title"] = "Contact";
}

<h1>Jeśli masz pytania, napisz do nas!</h1>
<h2>Formularz kontaktowy</h2>
<div class="row">
    <form asp-action="Contact" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name">Podaj swoje imie:</label>
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
        <label asp-for="Email">Podaj swój adres email:</label>
        <input type="text" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Message">Podaj swoją wiadomość:</label>
        <textarea asp-for="Message"></textarea>
    </div>
    <input type="submit" value="Wyślij wiadomość!" />
    </form>
</div>
