@model MovieRental.MVC.Models.Contact.ContactForm
@{
    ViewData["Title"] = "Contact";
}

<h1>Masz pytanie ?</h1>
<h2>Śmiało, napisz do nas</h2>
<div class="row">
    <form asp-action="Contact" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name">Nazwa użytkownika:</label>
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
        <label asp-for="Email">Adres email:</label>
        <input type="text" asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="Message">Treść wiadomości:</label>
        <textarea asp-for="Message"></textarea>
    </div>
    <input type="submit" value="Wyślij wiadomość!" />
    </form>
</div>
