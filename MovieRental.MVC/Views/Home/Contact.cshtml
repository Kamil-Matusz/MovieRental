@model MovieRental.MVC.Models.Contact.ContactForm
@{
    ViewData["Title"] = "Contact";
}

<h1>Masz pytanie ?</h1>
<h2>Śmiało, napisz do nas</h2>
    <form asp-action="Contact" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Name">Nazwa użytkownika:</label><br/>
            <input type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Adres email:</label><br/>
            <input type="email" asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Message">Treść wiadomości:</label>
            <textarea class="form-control" asp-for="Message"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Wyślij wiadomość</button>
    </form>
